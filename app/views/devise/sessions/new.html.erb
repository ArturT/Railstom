<h2><%= t('.sign_in', :default => "Sign in") %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, placeholder: t('layouts.application.placeholders.email') %>
    <%= f.input :password, :required => false, placeholder: t('layouts.application.placeholders.password') %>
    <%= f.input :remember_me, :as => :boolean, inline_label: t("devise.remember_me"), label: false if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('.sign_in', :default => "Sign in") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
