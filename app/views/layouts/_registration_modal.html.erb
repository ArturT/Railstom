<% unless user_signed_in? %>
  <div id="signUpModal" class="reveal-modal">
    <h2><%= t('layouts.application.sign_up_modal.header') %></h2>

    <p class="lead"><%= t('layouts.application.sign_up_modal.body') %></p>

    <%= link_to raw(%{<i class="fa fa-facebook-square fa-lg"></i> #{t('layouts.application.sign_up_modal.sign_in_via_facebook')}}), user_omniauth_authorize_path(:facebook), class: 'button', data: { 'load-icon' => 'append', 'load-icon-size' => 'fa-lg', 'load-icon-margin' => 'left:15px' } %>
    <%= link_to raw(%{#{t('layouts.application.sign_up_modal.registration_form')} <i class="fa fa-sign-in"></i>}), new_user_registration_path(), class: 'secondary' %>

    <a class="close-reveal-modal">&#215;</a>
  </div>
<% end %>
